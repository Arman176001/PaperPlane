<%-include("partial/header.ejs")%>

    <body id="bloggingPage">
        <div id="blogging">
            <div class="container-fluid justify-content-center">
                <form method="post" action="/submit">
                    <div class="mb-3">
                        <label for="Title" class="form-label" id="top">Title</label>
                        <input type="text" class="form-control" name="Title" placeholder="MyBlog">
                    </div>
                    <div>
                        <label for="body" class="form-label">Body</label>
                        <textarea class="form-control support-answer-textarea" name="body" rows="25" style="white-space: pre-wrap;" wrap="soft"></textarea>
